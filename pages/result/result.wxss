.content {
    width: 750rpx;
    height: 100vh;
  }
  
  .top {
    width: 735rpx;
    height: 8.5vh;
    background-color: #FF8C00;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 4rpx solid #ccc;
    padding-left: 20rpx;
  }
  
  .search {
    width: 550rpx;
    height: 70%;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding-left: 20rpx;
  }
  
  .bt {
    width: 150rpx;
    height: 70%;
    color: white;
    background-color: #FF4500;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
  }
  
  .bottom {
    width: 750rpx;
    height: 90%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  
  .right {
    width: 750rpx;
    height: 100%;
    background-color: rgb(240, 240, 240);
  }
  
  .sp {
    width: 100%;
    height: 100%;
  }
  
  .tian-row {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    padding-top: 20rpx;
  }
  
  .tian-item {
    width: 350rpx;
    height: 350rpx;
    margin-left: 15rpx;
    margin-bottom: 20rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .tian-item .img {
    width: 250rpx;
    height: 250rpx;
  }
  
  .img image {
    width: 100%;
    height: 100%;
  }
  
  .tian-item .fName {
    width: 200rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #666;
  }

  .view-nothing {
    height: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .image-nothing {
    width: 200rpx;
    height: 200rpx;
  }

  .text-nothing {
    color: #bfbfbf;
  }
  
/* pages/type/type.wxss */

.content {
    width: 750rpx;
    height: 100vh;
  }
  
  .top {
    width: 750rpx;
    height: 9.5%;
    background-color: #FF8C00;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 4rpx solid rgb(236, 236, 236);
  }
  
  .search {
    width: 700rpx;
    height: 70%;
    color: gray;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding-left: 20rpx;
    position: relative;
  }

  .search-icon{
    position: absolute;
    left: 20rpx;
    /* top: 23rpx; */
  }

  .serar-text{
    position: absolute;
    left: 60rpx;
  }
  
  .bottom {
    width: 750rpx;
    height: 90%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  
  .left {
    width: 250rpx;
    height: 100%;
    background-color: rgb(240, 240, 240);
  }
  
  .right {
    width: 500rpx;
    height: 100%;
  }
  
  .sp {
    width: 100%;
    height: 100%;
  }
  
  .type {
    width: 100%;
    height: 10%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 4rpx solid #ccc;
    
  }
  .selectColor{
    background-color: white;
  }
  
  .tian-row {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    padding-top: 20rpx;
  }
  
  .tian-item {
    width: 220rpx;
    height: 300rpx;
    margin-left: 15rpx;
    margin-bottom: 20rpx;
    background-color: rgb(240, 240, 240);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .tian-item .img {
    width: 200rpx;
    height: 200rpx;
  }
  
  .img image {
    width: 100%;
    height: 100%;
    border-radius: 40rpx;
  }
  
  .tian-item .fName {
    width: 200rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #666;
  }
  
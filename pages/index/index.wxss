.content{
    width: 750rpx;
    height: 100vh;
}
  
  .top {
    width: 750rpx;
    height: 9.5vh;
    background-color: #FF8C00;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 4rpx solid rgb(236, 236, 236);
  }
  .search {
    width: 700rpx;
    height: 70%;
    color: gray;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding-left: 20rpx;
    position: relative;
  }

  .search-icon{
    position: absolute;
    left: 20rpx;
    /* top: 23rpx; */
  }

  .serar-text{
    position: absolute;
    left: 60rpx;
  }
  

.swiper-container {
    width: 100%;
    height: 30vh;
}

.sp {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.product-list {
  width: 100%;
  height: 60vh;
}

.item {
  width: 710rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.itemd-left-middle {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.item-left {
  width: 40%;
  height: 100%;
}

.item-left image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

.item-mid {
  width: 60%;
  height: 100%;
}

.item-mid-top {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  font-weight: bold;
  font-size: 18px;
}

.item-mid-bottom {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}

.item-price{
  color: #FF4500;
  font-size: 20px;
}

.item-right {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  font-size: 26rpx;
}

.item-right-top{
  width:100%;
  height: 50%;
  display: flex;
  position: absolute;
  top: 10%;
}
.item-right-bottom{
  width:100%;
  height: 50%;
  display: flex;
  position: absolute;
  top: 50%;
}

.addcart {
  width: 100%;
  height: 75%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: hotpink;
}

.paybuy {
  width: 100%;
  height: 75%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: blueviolet;
}


  
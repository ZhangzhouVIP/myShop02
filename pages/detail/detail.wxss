.content {
    width: 750rpx;
    height: 100vh;
    
  }

  .productInfo {
      width: 750rpx;
      height: 90%;
  }

  .top-middle{
    width: 750rpx;
    height: 100%;
  }

  .top {
    width: 100%;
    height: 70%;
    
  }
  
  .top image {
    width: 100%;
    height: 100%;
  }
  
  .middle {
    width: 750rpx;
    height: 30%;
  }

  .middle-top {
    width: 750rpx;
    height: 40%;
    display: flex;
    align-items: center;
    line-height:18pt;
    letter-spacing:1pt;
    font-family: "黑体";
    flex-direction: row;
  }

  .middle-top-left{
    width: 95%;
  }

  .middle-top-right{
    width: 5%;
  }

  .middle-middle {
    width: 750rpx;
    height: 40%;
    display: flex;
    flex-direction: row;
  }

  .middle-middle .product-price {
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: row;
  }

  .price-icon{
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative
  }

  .price-icon image {
    width: 60%;
    height: 45%;
    position: absolute;
    right: 0px;
  }

  .price-number{
    width: 40%;
    height: 100%;
    display: flex;
    align-items: center;
    padding-left: 0px;
    font-size: 32px;
    color: #FF4500;
    font-weight: bold;
  }

  .price-unit{
    width: 40%;
    height: 100%;
    display: flex;
    align-items: center;
    color: #FF4500;
    padding-left: 0rpx;
  }

  .middle-middle .product-inventory {
    width: 40%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #707070;
  }
  
  .middle-bottom {
    width: 750rpx;
    height: 20%;
    display: flex;
    align-items: center;
    font-size: 13px;
    padding-left: 20rpx;
    color: #707070;
  }
  
  .middle-top .left {
    width: 500rpx;
    height: 100%;
    
  }

  .other{
      width: 750rpx;
  }
  .other image {
      width: 100%;
  }
  
  .bottom {
    width: 750rpx;
    height: 10%;
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    background-color: #FF8C00;
  }
  
  .kefu {
    width: 20%;
    height: 100%;
  }
  
  .img {
    width: 100%;
    height: 60%;
    
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
  }
  
  .img image {
    width: 40%;
    height: 80%;
    align-content: flex-end;
  }
  
  .kf {
    width: 100%;
    height: 40%;
    color: #707070;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
  }
  
  .shoucang {
    width: 20%;
    height: 100%;
    
  }
  
  .cart {
    width: 30%;
    height: 100%;
    background-color: hotpink;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: rgb(255, 253, 250);
  }
  
  .sell {
    width: 30%;
    height: 100%;
    background-color: blueviolet;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: snow;
  }
  